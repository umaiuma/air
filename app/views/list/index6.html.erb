function check_list_array(ul){
  alert('checking');
  var checks=ul.find('.subject_control').toArray();
  var array_len = checks.length;
  var result = [];
  alert('length ='+array_len);
  for(var i = 0; i<array_len;i++){
    if($(checks[i]).find('.checked').length){
      result.push(true);
      $(checks[i]).closest('li').removeClass('hidden_subject')
    }else{
      result.push(false);
      $(checks[i]).closest('li').addClass('hidden_subject');
    }
  }
  alert('check result='+result);
  return result;
}
function return_others(ul){
