var dialog_checked = function(){
  var checked_list=[]
  var checks= $( ".dialog ul li div" );
  checks.each(function(i){
    if($(this).hasClass('checked')==true){
      // alert("hi "+$(this).parent().text());
      checked_list.push(i);
    }
  });
  // alert(checked_list);
  return checked_list;
}
